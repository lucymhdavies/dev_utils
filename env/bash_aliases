		(qlmanage -p -c public.plain-text "$@" > /dev/null 2>&1 &
		local ql_pid=$!
		read -sn 1
		kill ${ql_pid}) > /dev/null 2>&1
	}

	alias chrome='app "Google Chrome.app"'

	alias finder='app Finder .'

