# archive/unarchive
function archivedir {
	d=`echo $1 | sed -e 's#/$##'`

	tar -zcvf $d.tar.gz $d
	du -sh $d
	du -sh $d.tar.gz

	echo "Delete $d?" ; read
	echo "Deleting"
	rm -rf $d
}
alias ad="archivedir"

function unarchivedir {
	tar -zxvf $1

	echo "Delete $1?" ; read
	echo "Deleting"
	rm $1
}
alias uad="unarchivedir"


