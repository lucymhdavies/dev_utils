#!/bin/bash

# Cronjob:
# 0 * * * * ~/git_src/dev_utils/bin/cleartmp > ~/git_src/dev_utils/bin/logs/cleartmp.log

echo ========================================
date
echo ========================================
echo "All files..."
echo ========================================
ls -l ~/tmp

echo
echo ========================================
echo "Files to delete..."
echo ========================================
find ~/tmp -mtime +1


# Keep the ~/tmp directory around forever
mkdir ~/tmp

echo
echo ========================================
echo "Deleting..."
echo ========================================
find ~/tmp -mtime +1 -exec rm -rf {} \;
